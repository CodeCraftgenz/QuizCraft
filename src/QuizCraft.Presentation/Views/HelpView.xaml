<UserControl x:Class="QuizCraft.Presentation.Views.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="800" HorizontalAlignment="Center">
            <TextBlock Text="Ajuda / Como Usar" Style="{StaticResource PageTitle}" />

            <TextBlock Text="Bem-vindo ao QuizCraft!" FontSize="16" Margin="0,0,0,8" Opacity="0.7" />
            <TextBlock Text="Selecione um tópico abaixo para saber mais sobre como usar o aplicativo."
                       Margin="0,0,0,24" Opacity="0.5" />

            <ItemsControl ItemsSource="{Binding Sections}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:CardExpander Margin="0,0,0,8" IsExpanded="False">
                            <ui:CardExpander.Header>
                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="14" />
                            </ui:CardExpander.Header>
                            <Border Padding="16,8">
                                <TextBlock Text="{Binding Content}" TextWrapping="Wrap"
                                           FontSize="13" LineHeight="22"
                                           FontFamily="Segoe UI" />
                            </Border>
                        </ui:CardExpander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- App Info -->
            <Border Style="{StaticResource CardBorder}" Margin="0,24,0,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="QuizCraft v1.0.0" FontWeight="SemiBold" HorizontalAlignment="Center" />
                    <TextBlock Text="Estude com inteligência. Revise com eficiência."
                               Opacity="0.5" HorizontalAlignment="Center" Margin="0,4" />
                    <TextBlock Text="© 2026 QuizCraft Software. Todos os direitos reservados."
                               FontSize="11" Opacity="0.4" HorizontalAlignment="Center" Margin="0,4" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
