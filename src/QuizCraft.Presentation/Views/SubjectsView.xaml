<UserControl x:Class="QuizCraft.Presentation.Views.SubjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:converters="clr-namespace:QuizCraft.Presentation.Converters">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis" />
        <converters:NullToVisibilityConverter x:Key="NullToVis" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Subjects Panel -->
        <StackPanel Grid.Column="0" Margin="0,0,12,0">
            <TextBlock Text="Matérias" Style="{StaticResource PageTitle}" />

            <!-- Add Subject -->
            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Nova Matéria" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <ui:TextBox PlaceholderText="Nome da matéria..."
                                Text="{Binding NewSubjectName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" />
                    <ui:TextBox PlaceholderText="Descrição (opcional)"
                                Text="{Binding NewSubjectDescription, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" />
                    <ui:Button Content="Adicionar Matéria" Appearance="Primary"
                               Command="{Binding AddSubjectCommand}" HorizontalAlignment="Left" />
                </StackPanel>
            </Border>

            <!-- Subjects List -->
            <ListBox ItemsSource="{Binding Subjects}"
                     SelectedItem="{Binding SelectedSubject}"
                     BorderThickness="0" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorder}" Margin="0,0,0,4" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Rectangle Fill="{Binding Color}" RadiusX="2" RadiusY="2" />
                                <StackPanel Grid.Column="1" Margin="12,0">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14" />
                                    <TextBlock Text="{Binding Description}" Opacity="0.6" FontSize="12"
                                               TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                                <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon Delete24}"
                                           Appearance="Secondary"
                                           Command="{Binding DataContext.DeleteSubjectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           CommandParameter="{Binding}" ToolTip="Excluir" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- Topics Panel -->
        <StackPanel Grid.Column="1" Margin="12,0,0,0">
            <TextBlock Text="Tópicos" Style="{StaticResource PageTitle}" />

            <Border Style="{StaticResource CardBorder}" Margin="0,0,0,16"
                    Visibility="{Binding SelectedSubject, Converter={StaticResource NullToVis}}">
                <StackPanel>
                    <TextBlock FontWeight="SemiBold" Margin="0,0,0,8">
                        <Run Text="Tópicos de: " />
                        <Run Text="{Binding SelectedSubject.Name, Mode=OneWay}" FontWeight="Bold" />
                    </TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBox PlaceholderText="Nome do tópico..."
                                    Text="{Binding NewTopicName, UpdateSourceTrigger=PropertyChanged}" />
                        <ui:Button Grid.Column="1" Content="Adicionar" Appearance="Primary"
                                   Command="{Binding AddTopicCommand}" Margin="8,0,0,0" />
                    </Grid>
                </StackPanel>
            </Border>

            <ItemsControl ItemsSource="{Binding Topics}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardBorder}" Margin="0,0,0,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                    <ItemsControl ItemsSource="{Binding SubTopics}" Margin="16,4,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Name}" FontSize="12" Opacity="0.7"
                                                           Margin="0,2" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon Delete24}"
                                           Appearance="Secondary"
                                           Command="{Binding DataContext.DeleteTopicCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           CommandParameter="{Binding}" ToolTip="Excluir" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock Text="Selecione uma matéria para ver seus tópicos."
                       Opacity="0.5" Margin="0,16" HorizontalAlignment="Center"
                       Visibility="{Binding SelectedSubject, Converter={StaticResource NullToVis}, ConverterParameter=Invert}" />
        </StackPanel>
    </Grid>
</UserControl>
