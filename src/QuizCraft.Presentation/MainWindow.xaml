<ui:FluentWindow x:Class="QuizCraft.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="QuizCraft" Height="768" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        Icon="/Assets/logoQuizCraft.png">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar x:Name="TitleBar" Title="QuizCraft" Grid.Row="0" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Navigation Sidebar -->
            <Border Grid.Column="0" Background="{ui:ThemeResource ControlOnImageFillColorDefaultBrush}"
                    BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,1,0">
            <StackPanel Width="220">
                <!-- Logo e titulo do app -->
                <StackPanel Orientation="Horizontal" Margin="16,16,16,12">
                    <Image Source="/Assets/logoQuizCraft.png"
                           Width="32" Height="32"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Margin="0,0,10,0" />
                    <TextBlock Text="QuizCraft" FontSize="18" FontWeight="SemiBold"
                               VerticalAlignment="Center" />
                </StackPanel>

                <ListBox x:Name="NavListBox" SelectionChanged="NavListBox_SelectionChanged"
                         Background="Transparent" BorderThickness="0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="16,10" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" Padding="{TemplateBinding Padding}"
                                                Background="Transparent" CornerRadius="4" Margin="4,1">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background"
                                                        Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background"
                                                        Value="{DynamicResource ControlFillColorDefaultBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBoxItem Tag="Dashboard">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Home24" Margin="0,0,12,0" />
                            <TextBlock Text="Dashboard" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="Subjects">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Library24" Margin="0,0,12,0" />
                            <TextBlock Text="Biblioteca" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="Questions">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="DocumentText24" Margin="0,0,12,0" />
                            <TextBlock Text="Questões" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="CreateQuiz">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Play24" Margin="0,0,12,0" />
                            <TextBlock Text="Criar Quiz" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="Review">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="ArrowRepeatAll24" Margin="0,0,12,0" />
                            <TextBlock Text="Revisão" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="History">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="History24" Margin="0,0,12,0" />
                            <TextBlock Text="Histórico" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>

                <!-- Spacer -->
                <Border Height="1" Background="{ui:ThemeResource CardStrokeColorDefaultBrush}" Margin="12,8" />

                <ListBox x:Name="FooterNavListBox" SelectionChanged="FooterNavListBox_SelectionChanged"
                         Background="Transparent" BorderThickness="0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="16,10" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" Padding="{TemplateBinding Padding}"
                                                Background="Transparent" CornerRadius="4" Margin="4,1">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background"
                                                        Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background"
                                                        Value="{DynamicResource ControlFillColorDefaultBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBoxItem Tag="Settings">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Settings24" Margin="0,0,12,0" />
                            <TextBlock Text="Configurações" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="Help">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="QuestionCircle24" Margin="0,0,12,0" />
                            <TextBlock Text="Ajuda" VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Padding="24">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ContentControl x:Name="ContentArea" />
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</ui:FluentWindow>
